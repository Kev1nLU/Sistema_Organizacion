@model Sistema_Organizacion.Models.EmpleadoHabilidad

@{
    ViewData["Title"] = "Asignar habilidad";
}

<h1>Asignar Habilidad</h1>

<h4>Asignación de Habilidades</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdEmpleado" class="control-label"></label>
                <select asp-for="IdEmpleado" asp-items="@ViewBag.Empleados" class="form-control"></select>
                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreHabilidad" class="control-label"></label>
                <input asp-for="NombreHabilidad" class="form-control" />
                <span asp-validation-for="NombreHabilidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
