@model Sistema_Organizacion.Models.EmpleadoHabilidad

@{
    ViewData["Title"] = "Editar habilidad";
}

<h1>Editar habilidad</h1>

<h4>Habilidad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdEmpleado" class="control-label"></label>
                <select asp-for="IdEmpleado" class="form-Control" asp-items="@(new SelectList((IEnumerable<Empleado>)ViewBag.Empleados, "Id", "NombreCompleto"))">
                </select>
                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreHabilidad" class="control-label"></label>
                <input asp-for="NombreHabilidad" class="form-control" />
                <span asp-validation-for="NombreHabilidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
