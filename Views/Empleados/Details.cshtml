        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaIngreso)
            <p>@ViewBag.Edadi Años</p>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdJefe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdJefe)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdArea)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdArea)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/images/FotoPerfil.png" class="img" alt="Fotografia" with="150" height="250" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
